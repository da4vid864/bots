{
  "name": "whatsapp-bot-manager",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "description": "Dashboard to manage multiple WhatsApp bots with Google Auth.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"npm run client\"",
    "client": "cd client && npm run dev",
    "seed:local": "node scripts/seed_local.js",
    "build:client": "cd client && npm run build",
    "build": "npm run build:client",
    "serve": "NODE_ENV=production node server.js",
    "heroku-postbuild": "npm run build:client",
    "migrate": "node migrate.js",
    "backup": "node scripts/backup-database.js",
    "backup:database-only": "node scripts/backup-database.js --database-only",
    "backup:no-upload": "node scripts/backup-database.js --no-upload",
    "analyze-chats": "node scripts/auto-analyze-chats.js",
    "diagnose:chats": "node scripts/diagnose-chats.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@whiskeysockets/baileys": "^6.6.0",
    "axios": "^1.6.8",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "concurrently": "^9.1.2",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "framer-motion": "^12.23.25",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.555.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "pino": "^9.3.2",
    "qrcode": "^1.5.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-helmet": "^6.1.0",
    "react-icons": "^5.5.0",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "resolutions": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
